{
  "name": "mrdj-pokemon-mcp",
  "version": "0.1.0",
  "description": "MCP server exposing Pokemon data (via local PokeAPI api-data sync) and strategy guides",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "mrdj-pokemon-mcp": "./build/index.js"
  },
  "files": [
    "build",
    "guides",
    "resources"
  ],
  "scripts": {
    "build": "tsc -p .",
    "start": "node ./build/index.js",
    "start:http": "node ./build/index.js --http-port 4027",
    "dev": "ts-node ./src/index.ts",
    "dev:http": "ts-node ./src/index.ts --http-port 4027",
    "test": "echo \"No tests yet\" && exit 0"
  },
  "keywords": [
    "mcp",
    "pokemon",
    "pokeapi",
    "strategy"
  ],
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pokenode-ts": "^1.20.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^25.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
